<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.0</version>
    <date>2020-05-29T17:58:12Z</date>
    <groups>
        <group>
            <name>Templates RR</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>RR Fail2ban</template>
            <name>RR Fail2ban</name>
            <description>https://github.com/remontti/zabbix-fail2ban-discovery-</description>
            <groups>
                <group>
                    <name>Templates RR</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Fail2ban</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Fail2Ban está em execução</name>
                    <key>proc.num[fail2ban-server]</key>
                    <delay>60</delay>
                    <description>ping - testa se o servidor está ativo</description>
                    <applications>
                        <application>
                            <name>Fail2ban</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <triggers>
                        <trigger>
                            <expression>{last()}=0</expression>
                            <name>Fail2ban parou</name>
                            <priority>AVERAGE</priority>
                        </trigger>
                    </triggers>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Fail2ban descoberta</name>
                    <key>fail2ban.discovery</key>
                    <description>Descoberta das cadeias</description>
                    <item_prototypes>
                        <item_prototype>
                            <name>Fail2ban $1 Total de IPs Banidos</name>
                            <key>fail2ban.statustotal[{#JAIL}]</key>
                            <history>30d</history>
                            <trends>120d</trends>
                            <units>count</units>
                            <applications>
                                <application>
                                    <name>Fail2ban</name>
                                </application>
                            </applications>
                        </item_prototype>
                        <item_prototype>
                            <name>Fail2ban $1 IPs Banidos atual</name>
                            <key>fail2ban.status[{#JAIL}]</key>
                            <history>30d</history>
                            <trends>120d</trends>
                            <units>count</units>
                            <applications>
                                <application>
                                    <name>Fail2ban</name>
                                </application>
                            </applications>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>IPs na prisão {#JAIL}</name>
                            <graph_items>
                                <graph_item>
                                    <drawtype>GRADIENT_LINE</drawtype>
                                    <color>FF0000</color>
                                    <item>
                                        <host>RR Fail2ban</host>
                                        <key>fail2ban.status[{#JAIL}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <drawtype>BOLD_LINE</drawtype>
                                    <color>FFFF00</color>
                                    <yaxisside>RIGHT</yaxisside>
                                    <item>
                                        <host>RR Fail2ban</host>
                                        <key>fail2ban.statustotal[{#JAIL}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
